#include <stdio.h>

int main() {
    int arr[] = {10, 25, 8, 37, 42, 15};
    int size = sizeof(arr) / sizeof(arr[0]);
    int max = arr[0];

    for (int i = 1; i < size; i++) {
        if (arr[i] > max) {
            max = arr[i];
        }
    }

    printf("The largest number in the array is: %d\n", max);

    return 0;
}
 
